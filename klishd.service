[Unit]
Description=Klish CLI Daemon for VPP
After=vpp.service network.target
Requires=vpp.service
BindsTo=vpp.service
PartOf=vpp.service

[Service]
Type=forking
ExecStartPre=/bin/sleep 2
ExecStartPre=/usr/local/bin/vpp-load-config
ExecStart=/usr/local/bin/klishd -d
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
